# 	Header always edit Set-Cookie (.*) "$1; SameSite=strict"
# 	Header onsuccess edit Set-Cookie (.*) "$1; SameSite=strict"
# 	Header edit Set-Cookie ^(.*);\s?SameSite=strict;?\s?(.*);\s?SameSite=strict;?\s?(.*)$ "$1; $2; $3; SameSite=strict"
