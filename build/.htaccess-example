# </ifmodule>

<IfModule mod_rewrite.c>
  RewriteEngine On
	# si usas localhost comenta la siguiente linea
  RewriteBase /
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ index.php?/$1 [L]
</IfModule>
